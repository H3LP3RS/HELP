<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/await_help_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AwaitHelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="20"
        android:text="@string/await_help_welcome_message"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.github.h3lp3rs.h3lp.MapsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".NearbyUtilitiesActivity" />

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/searchProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking for help nearby..." />

    <TextView
        android:id="@+id/incoming_helpers_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/teal_700"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutorials"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textColor="@color/dark_blue" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchBar"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- First tutorial -->

            <LinearLayout
                android:layout_width="@dimen/scroll_view_tuto_layout"
                android:layout_height="@dimen/scroll_view_tuto_layout"
                android:layout_centerInParent="true"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="@dimen/image_button_tuto_page"
                    android:layout_height="@dimen/image_button_tuto_page"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_image_inside_layout"
                    android:background="@drawable/heart_attack"
                    android:contentDescription="heart_attack_tuto_button"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scroll_view_margin_text"
                    android:text="Heart attacks"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/icon_font"
                    android:textStyle="bold" />

            </LinearLayout>


            <!-- Second tutorial -->


            <LinearLayout
                android:layout_width="@dimen/scroll_view_tuto_layout"
                android:layout_height="@dimen/scroll_view_tuto_layout"
                android:layout_centerInParent="true"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="@dimen/image_button_tuto_page"
                    android:layout_height="@dimen/image_button_tuto_page"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_image_inside_layout"
                    android:background="@drawable/epipen"
                    android:contentDescription="allergies_tuto_button"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scroll_view_margin_text"
                    android:text="Allergic Reaction"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/icon_font"
                    android:textStyle="bold" />

            </LinearLayout>


            <!-- Third Tutorial -->



            <LinearLayout
                android:layout_width="@dimen/scroll_view_tuto_layout"
                android:layout_height="@dimen/scroll_view_tuto_layout"
                android:layout_centerInParent="true"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="@dimen/image_button_tuto_page"
                    android:layout_height="@dimen/image_button_tuto_page"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_image_inside_layout"
                    android:background="@drawable/defibrillator"
                    android:contentDescription="defibrillator_tuto_button"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scroll_view_margin_text"
                    android:text="Defibrillators"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/icon_font"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Fourth Tutorial -->

            <LinearLayout
                android:layout_width="@dimen/scroll_view_tuto_layout"
                android:layout_height="@dimen/scroll_view_tuto_layout"
                android:layout_centerInParent="true"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="@dimen/image_button_tuto_page"
                    android:layout_height="@dimen/image_button_tuto_page"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_image_inside_layout"
                    android:background="@drawable/asthma"
                    android:contentDescription="asthma_tuto_button"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scroll_view_margin_text"
                    android:text="Asthma Attack"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/icon_font"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/help_params_call_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/phone_icon_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/emergency_call"
            tools:ignore="MissingConstraints,RedundantDescriptionCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:text="@string/call_emergency_button"
            android:textAlignment="center"
            android:textColor="#175A04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/help_params_call_button"
            app:layout_constraintVertical_bias="0.567" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/phone_icon_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.769"
            app:layout_constraintStart_toEndOf="@+id/help_params_call_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cancel_button"
            tools:ignore="MissingConstraints,RedundantDescriptionCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="100dp"
            android:text="Cancel search"
            android:textAlignment="center"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>