<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/help_params_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpParametersActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-15dp">


    <ToggleButton
        android:id="@+id/selectMedsButton4"
        style="@style/TextAppearance.AppCompat.Widget.Switch"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="60dp"
        android:checked="false"
        android:filterTouchesWhenObscured="false"
        android:textOff="@string/first_aid_kit"
        android:background="@drawable/first_aid_kit"
        android:backgroundTint="#E0FFFFFF"
        android:backgroundTintMode="src_over"
        android:textFontWeight="900"
        android:textOn="@string/first_aid_kit"
        app:layout_constraintBottom_toTopOf="@+id/help_params_call_button"
        app:layout_constraintEnd_toStartOf="@+id/selectMedsButton5"
        app:layout_constraintStart_toEndOf="@+id/selectMedsButton3"
        app:layout_constraintTop_toBottomOf="@+id/selectMedsButton1" />

    <ToggleButton
        android:id="@+id/selectMedsButton3"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="60dp"
        android:checked="false"
        android:textOff="@string/cpr"
        android:textOn="@string/cpr"
        android:background="@drawable/cardio"
        android:backgroundTint="#D0FFFFFF"
        android:backgroundTintMode="src_over"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/help_params_call_button"
        app:layout_constraintEnd_toStartOf="@+id/selectMedsButton4"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectMedsButton0" />

    <ToggleButton
        android:id="@+id/selectMedsButton0"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="25dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:checked="false"
        android:textOff="@string/epipen"
        android:textOn="@string/epipen"
        android:background="@drawable/epipen"
        android:backgroundTint="#CFFFFFFF"
        android:backgroundTintMode="src_over"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/selectMedsButton3"
        app:layout_constraintEnd_toStartOf="@+id/selectMedsButton1"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" >

    </ToggleButton>

    <ToggleButton
        android:id="@+id/selectMedsButton5"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="60dp"
        android:checked="false"
        android:textOff="@string/med_pro"
        android:textOn="@string/med_pro"
        android:background="@drawable/doctor"
        android:backgroundTint="#DFFFFFFF"
        android:backgroundTintMode="src_over"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/help_params_call_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectMedsButton4"
        app:layout_constraintTop_toBottomOf="@+id/selectMedsButton2" />

    <ToggleButton
        android:id="@+id/selectMedsButton2"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="2dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="2dp"
        android:button="@drawable/select_meds_button"
        android:checked="false"
        android:textOff="@string/Insulin"
        android:textOn="@string/Insulin"
        android:background="@drawable/insuline"
        android:backgroundTint="#AFFFFFFF"
        android:backgroundTintMode="src_over"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/selectMedsButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectMedsButton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <ToggleButton
        android:id="@+id/selectMedsButton1"
        android:layout_width="@dimen/select_meds_button"
        android:layout_height="@dimen/select_meds_button"
        android:layout_marginStart="2dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:checked="false"
        android:textOff="@string/asthma_med"
        android:textOn="@string/asthma_med"
        android:background="@drawable/inhaler"
        android:backgroundTint="#DFFFFFFF"
        android:backgroundTintMode="src_over"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/selectMedsButton4"
        app:layout_constraintEnd_toStartOf="@+id/selectMedsButton2"
        app:layout_constraintStart_toEndOf="@+id/selectMedsButton0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <ImageView
        android:id="@+id/help_params_call_button"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/phone_icon_description"
        android:onClick="emergencyCall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/phone_icon_teal"
        tools:ignore="MissingConstraints,RedundantDescriptionCheck" />

    <Button
        android:id="@+id/help_params_search_button"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#DD1818"
        android:onClick="searchHelp"
        android:text="@string/search_help_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toEndOf="@+id/help_params_call_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="@string/call_emergency_button"
        android:textColor="@color/teal_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_params_call_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/help_breath_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_calm_meds_selection_msg"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/teal_400"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
            />


    <TextView
            android:id="@+id/location_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/current_location"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/help_breath_text"
            app:layout_constraintBottom_toTopOf="@+id/selectMedsButton1"
            app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>



