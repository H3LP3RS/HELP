<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.forum.ForumCategoriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="?actionBarSize" >

            <ImageView
                android:id="@+id/forum_categories_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="goBack"
                android:padding="15dp"
                android:src="@drawable/back_icon"
                android:contentDescription="@string/back_button_description" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_aid_categories"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="36sp"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/general_medicine"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/generalist_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:onClick="goToForum"
                    android:padding="20dp"
                    android:text="@string/expand_forum" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_generalist"
                android:contentDescription="@string/general_medicine" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/red_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/cardiology"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/cardio_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expand_forum"
                    android:onClick="goToForum"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-26dp"
                android:src="@drawable/cardio"
                android:contentDescription="@string/cardiology" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/traumatology"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/traum_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expand_forum"
                    android:onClick="goToForum"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_traumatology"
                android:contentDescription="@string/traumatology" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/pediatry"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/pedia_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:onClick="goToForum"
                    android:padding="20dp"
                    android:text="@string/expand_forum" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/ic_pediatric"
                android:contentDescription="@string/pediatry" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/neurology"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/neuro_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expand_forum"
                    android:onClick="goToForum"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-25dp"
                android:src="@drawable/ic_neurology"
                android:contentDescription="@string/neurology" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/red_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="25dp"
                    android:text="@string/gynecology"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/gyne_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="@string/expand_forum"
                    android:onClick="goToForum"/>


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-25dp"
                android:src="@drawable/ic_gynecology"
                android:contentDescription="@string/gynecology" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>