<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.firstaid.FirstAidActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="?actionBarSize" >

            <ImageView
                android:id="@+id/first_aid_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="goToMainActivity"
                android:padding="15dp"
                android:src="@drawable/back_icon"
                tools:ignore="ContentDescription" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visbycf_bold"
            android:padding="10dp"
            android:text="@string/first_aid_categories"
            android:textSize="36sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/persimmon_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visbycf_medium"
                    android:padding="25dp"
                    android:text="@string/allergy_emergency"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/allergy_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:onClick="goToButtonActivity"
                    android:fontFamily="@font/visbycf_regular"
                    android:padding="20dp"
                    android:text="@string/expand" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/epipen"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/persimmon_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visbycf_medium"
                    android:padding="25dp"
                    android:text="@string/heart_attack_emergency"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/heart_attack_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="#00000000"
                    android:onClick="goToButtonActivity"
                    android:fontFamily="@font/visbycf_regular"
                    android:padding="20dp"
                    android:text="@string/expand" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-26dp"
                android:src="@drawable/heart_attack"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/persimmon_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visbycf_medium"
                    android:padding="25dp"
                    android:text="@string/defibrillator_tutorial"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/aed_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:onClick="goToButtonActivity"
                    android:fontFamily="@font/visbycf_regular"
                    android:padding="20dp"
                    android:text="@string/expand" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:src="@drawable/first_aid_kit"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/persimmon_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visbycf_medium"
                    android:padding="25dp"
                    android:text="@string/asthma_attack"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/asthma_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:onClick="goToButtonActivity"
                    android:fontFamily="@font/visbycf_regular"
                    android:padding="20dp"
                    android:text="@string/expand" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-25dp"
                android:src="@drawable/asthma"
                tools:ignore="ContentDescription" />
        </RelativeLayout>






    </LinearLayout>
</ScrollView>