<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_red"
    tools:context=".MainPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_blue"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/Hello_text"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/tutorialButton"
                android:layout_toEndOf="@+id/menuButton"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/hello"
                android:textColor="@color/dark_blue"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Hello_text"
                android:layout_centerHorizontal="true"
                android:text="@string/welcome_text"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stay_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Welcome_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/stay_safe"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/menu"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/tutorialButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/tutorial"
                android:contentDescription="@string/tutorial_button" />


            <SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/stay_safe"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="1dp"
                android:background="@color/light_grey"
                android:iconifiedByDefault="false"
                android:queryHint="Search..."
                android:searchIcon="@drawable/search" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_bar"
                android:layout_marginTop="50dp"
                android:background="@color/white"

                >
                <!-- first button in scroll view -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/outermost_layout"
                        android:layout_width="117dp"
                        android:layout_height="117dp"
                        android:background="@color/blue"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/inside_layout"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8.5dp"
                            android:layout_marginTop="8.5dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/hospital"
                                android:contentDescription="@string/hospital_button" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/hospital"
                                android:textColor="@color/dark_blue"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <!-- second button in scroll view -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/outermost_layout2"
                            android:layout_width="117dp"
                            android:layout_height="117dp"
                            android:background="@color/blue"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/inside_layout2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8.5dp"
                                android:layout_marginTop="8.5dp"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/defibrillator"
                                    android:contentDescription="@string/defibrillator_button" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/defibrillator"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                        <!-- third button in scroll view -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/outermost_layout3"
                                android:layout_width="117dp"
                                android:layout_height="117dp"
                                android:background="@color/blue"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/inside_layout3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginStart="8.5dp"
                                    android:layout_marginTop="8.5dp"
                                    android:background="@color/white"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/pharmacy"
                                        android:contentDescription="@string/pharmacy_button"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:text="@string/pharmacy"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- fourth button in scroll view -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/outermost_layout4"
                            android:layout_width="117dp"
                            android:layout_height="117dp"
                            android:background="@color/blue"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/inside_layout4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8.5dp"
                                android:layout_marginTop="8.5dp"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/education"
                                    android:contentDescription="@string/tips_button" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="@string/first_aid"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                        <!-- Fifth button in scroll view -->


                        <LinearLayout
                            android:id="@+id/CPR_rate"
                            android:layout_width="117dp"
                            android:layout_height="117dp"
                            android:background="@color/blue"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/inside_layout5"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8.5dp"
                                android:layout_marginTop="8.5dp"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageButton
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/cpr_rate"
                                    android:contentDescription="@string/cpr_rate_button" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="@string/cpr_rate"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>




        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>